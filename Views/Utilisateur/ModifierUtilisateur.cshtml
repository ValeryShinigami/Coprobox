@model coproBox.Models.Utilisateur
@{
    Layout = null;
}


@using (Html.BeginForm())
    {
    <div class="user-section">Modifier un utilisateur</div>
        <div class="zone-form">

            <div class="row justify-content-center">
                <form class="formAnnonce " method="post" enctype="multipart/form-data">
                    <fieldset class="user-form">
                        <div class="row mb-3">

                            @Html.LabelFor(m => Model.InfosPersonnelle.Nom, new { @class = "labelAnnonce col-sm-2 col-form-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => Model.InfosPersonnelle.Nom, new { @class = "form-control", placeholder = "Titre" })
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.InfosPersonnelle.Nom)
                            </div>
                        </div>

                        <div class="row mb-3">

                            @Html.LabelFor(model => model.InfosPersonnelle.Prenom, new { @class = "labelAnnonce col-sm-2 col-form-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.InfosPersonnelle.Prenom, new { @class = "form-control", placeholder = "Titre" })
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.InfosPersonnelle.Prenom)
                            </div>
                        </div>

                        <div class="row mb-3">

                            @Html.LabelFor(model => model.Compte.email, new { @class = "labelAnnonce col-sm-2 col-form-label" })
                            <div class="col-sm-6">
                                @Html.TextAreaFor(m => m.Compte.email, new { @class = "form-control", placeholder = "Description" })
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.Compte.email)
                            </div>
                        </div>

                        <div class="row mb-3">

                            @Html.LabelFor(model => model.InfosPersonnelle.dateNaissance, new { @class = "labelAnnonce col-sm-2 col-form-label" })
                            <div class="col-sm-6">
                                @Html.TextAreaFor(m => m.InfosPersonnelle.dateNaissance, new { @class = "form-control", placeholder = "Description" })
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.InfosPersonnelle.dateNaissance)
                            </div>
                        </div>

                        <div class="row mb-3">

                            @Html.LabelFor(model => model.Adresse.numeroPorte, new { @class = "labelAnnonce col-sm-2 col-form-label" })
                            <div class="col-sm-6">
                                @Html.TextAreaFor(m => m.Adresse.numeroPorte, new { @class = "form-control", placeholder = "Description" })
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.Adresse.numeroPorte)
                            </div>
                        </div>

                        <div class="row mb-3">

                            @Html.LabelFor(model => model.Adresse.numeroRue, new { @class = "labelAnnonce col-sm-2 col-form-label" })
                            <div class="col-sm-6">
                                @Html.TextAreaFor(m => m.Adresse.numeroRue, new { @class = "form-control", placeholder = "Description" })
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.Adresse.numeroRue)
                            </div>
                        </div>

                        <div class="row mb-3">

                            @Html.LabelFor(model => model.Adresse.nomRue, new { @class = "labelAnnonce col-sm-2 col-form-label" })
                            <div class="col-sm-6">
                                @Html.TextAreaFor(m => m.Adresse.nomRue, new { @class = "form-control", placeholder = "Description" })
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.Adresse.nomRue)
                            </div>
                        </div>


                        <div class="row mb-3">

                            @Html.LabelFor(model => model.Adresse.codePostal, new { @class = "labelAnnonce col-sm-2 col-form-label" })
                            <div class="col-sm-6">
                                @Html.TextAreaFor(m => m.Adresse.codePostal, new { @class = "form-control", placeholder = "Description" })
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.Adresse.codePostal)
                            </div>
                        </div>

                        <div class="row mb-3">

                            @Html.LabelFor(model => model.Adresse.nomVille, new { @class = "labelAnnonce col-sm-2 col-form-label" })
                            <div class="col-sm-6">
                                @Html.TextAreaFor(m => m.Adresse.nomVille, new { @class = "form-control", placeholder = "Description" })
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.Adresse.nomVille)
                            </div>
                        </div>

                        <button type="submit" class="btn-modification-user btn">Valider</button>
                    </fieldset>
                    }

                </form>
            </div>
        </div>

    }

 }
 
