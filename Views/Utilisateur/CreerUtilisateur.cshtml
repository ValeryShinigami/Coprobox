@using coproBox.Models
@model coproBox.Models.Utilisateur
@{
    Layout = "_Layout";
    ViewBag.Title = "Création compte utilisateur";
}

@using (Html.BeginForm())

{
    <div class="user-section">Créer un utilisateur</div>

    <div class="user-body">
        <div class="user-categorie">
            <div class="user-label">
                @Html.LabelFor(m => m.InfosPersonnelle.Prenom)
            </div>
            <div class="user-text ">
                @Html.TextBoxFor(m => m.InfosPersonnelle.Prenom)
                @Html.ValidationMessageFor(m => m.InfosPersonnelle.Prenom)
            </div>
        </div>
        <div class="user-categorie">
            <div class="user-label">
                @Html.LabelFor(m => m.InfosPersonnelle.Nom)
            </div>
            <div class="user-text ">
                @Html.TextBoxFor(m => m.InfosPersonnelle.Nom)
                @Html.ValidationMessageFor(m => m.InfosPersonnelle.Nom)

            </div>
        </div>
        <div class="user-categorie">
            <div class="user-label">
                @Html.LabelFor(m => m.Compte.motDePasse)
            </div>
            <div class="user-text ">
                @Html.TextBoxFor(m => m.Compte.motDePasse)
                @Html.ValidationMessageFor(m => m.Compte.motDePasse)
            </div>
        </div>
        <div class="user-categorie">
            <div class="user-label">
                @Html.LabelFor(m => m.Compte.email)
            </div>
            <div class="user-text ">
                @Html.TextBoxFor(m => m.Compte.email)
                @Html.ValidationMessageFor(m => m.Compte.email)
            </div>
        </div>

        <div class="user-btn-submit">
            <input type="submit" value="Enregistrer" />
        </div>

    </div>
 }
