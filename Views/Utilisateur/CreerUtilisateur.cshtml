@using coproBox.Models
@model coproBox.Models.Utilisateur
@{
    Layout = "_Layout";
    ViewBag.Title = "Création compte utilisateur";
}

@using (Html.BeginForm())
    {
<div class="user-section">
    <div class="container">

        <fieldset class="user-form">

            <legend>Créer un compte : </legend>

        
            <div class="row user-name mb-1">
                <div class="col-2">
                    @Html.LabelFor(m => m.InfosPersonnelle.Nom)
                </div>
                <div class="col-10">
                    @Html.TextBoxFor(m => m.InfosPersonnelle.Nom)
                    @Html.ValidationMessageFor(m => Model.InfosPersonnelle.Nom)
                </div>
            </div>

            <div class="row user-fname mb-1">
                <div class="col-2">
                    @Html.LabelFor(m => Model.InfosPersonnelle.Prenom)
                </div>
                <div class="col-10">
                    @Html.TextBoxFor(m => Model.InfosPersonnelle.Prenom)
                    @Html.ValidationMessageFor(m => Model.InfosPersonnelle.Prenom)
                </div>
            </div>
            <div class="row user_email mb-1">
                <div class="col-2">
                    @Html.LabelFor(m => Model.Compte.email)
                </div>
                <div class="col-10">
                    @Html.TextBoxFor(m => Model.Compte.email)
                    @Html.ValidationMessageFor(m => Model.Compte.email)
                </div>
            </div>

            <div class="row user_email mb-1">
                <div class="col-2">
                    @Html.LabelFor(m => Model.Compte.motDePasse)
                </div>
                <div class="col-10">
                    @Html.EditorFor(m => Model.Compte.motDePasse, new { htmlAttributes = new { type = "password" } })
                    @Html.ValidationMessageFor(m => Model.Compte.motDePasse)
                </div>
            </div>
            <div class="user-btn-submit">
                <input type="submit" value="Enregistrer" />
            </div>
        </fieldset>
    </div>
</div>



    }
