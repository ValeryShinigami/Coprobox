<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="~/css/Site.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
          
</head>
<body class="d-flex flex-column min-vh-100">


    <header class="container-fluid">
        <nav class="navbar navbar-expand-md">
            <a href="/"><img id="logo" src="../Image/logo1.png" width="60" height="60" /></a>
            <button class="navbar-toggler" style="background-color:#e3f2fd;" type="button" data-toggle="collapse" data-target="#main-navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="main-navigation">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/annonce/">Annonces</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cagnotte/">Cagnottes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
            </div>
            <div class="header-pic">
                <div class="profil-image">
                </div>
                <div>
                    <svg viewBox="0 0 16 16"><path d="M8 12L2 6h12z"></path></svg>
                </div>
            </div>
        </nav>
    
    </header>
   
    <div id="contenu">
        @RenderBody()
    </div>

    <footer class="footer-10 mt-auto">
        <div class="container">
            <div class="row mb-1 no-gutters">
                <div class="col-md-4 mb-md-0 mb-3 d-flex">
                    <div class="col-md-4 w-100 py-3">
                        <div class="ico w-100  text-center">
                            <img class="icone" src="/Image/icone-tel.png" />
                        </div>
                        <div class="text">
                            <p>(+33)01.42.00.00.00</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-md-0 mb-3 d-flex">
                    <div class="col-md-4 w-100 py-3">
                        <div class="ico w-100 text-center">
                            <img class="icone" src="/Image/icone-mail.png" />
                        </div>
                        <div class="text">
                            <p>info@coprobox.com</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-md-0 mb-3 d-flex">
                    <div class="col-md-4 w-100 py-3">
                        <div class="ico w-100 text-center">
                            <img class="icone" src="/Image/icone-adresse.png" />
                        </div>
                        <div class="text">
                            <p>2 avenue du Général LECLERC <br /> 92240 MALAKOFF</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row w-100">
                <div class="separation"></div>
            </div>
            <div class="row no-gutters ">
                <div class="bas-2">
                <div class="col-md-4 mb-md-0 mb-3 d-flex">
                    <div class="col-md-4 w-100 py-3">
                        <div class="bas w-100 text-center">
                            <h6 class="partie">A propos</h6>
                        </div>
                        <div class="text">
                            <ul class="list-style">
                                <li>Notre histoire</li>
                                <li>Notre équipe</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-md-0 mb-3 d-flex">
                    <div class="col-md-4 w-100 py-3">
                        <div class="bas w-100 text-center">
                            <h6 class="partie">L'entreprise</h6>
                        </div>
                        <div class="text">
                            <ul class="list-style">
                                <li>Contacts</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-md-0 mb-3 d-flex">
                    <div class="col-md-4 w-100 py-3">
                        <div class="bas w-100 text-center">
                            <h6 class="partie">Ressources</h6>
                        </div>
                        <div class="text">
                            <ul class="list-style">
                                <li><a href="" class="d-block">Politique de confidentialité</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="base">
                <p>Copyright © Team Coprobox</p>
            </div>
        </div>
        </div>
    </footer>
</body>
</html>