<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="~/css/Site.css" rel="stylesheet">
</head>
<body>


    <header class="container-fluid">
        <div class="row">
            <div id="left" class="col-1">
                <a href="/"><img id="logo" src="/Image/logo1.png" width="65" height="65" /></a>
            </div>
            <div align="center" id="center" class="col-10">
                <nav class="navbar navbar-expand-md">
                    <div class="collapse navbar-collapse" id="main-navigation">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/annonce">Annonces</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/cagnotte">Cagnottes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/contact">Contact</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div id="right" class="col-1" align="right">
                <div class="header-pic">
                    <div class="profil-image">
                    </div>
                    <div>
                        <svg viewBox="0 0 16 16"><path d="M8 12L2 6h12z"></path></svg>
                    </div>
                </div>
            </div>
        </div>
    
    </header>

    <div id="contenu">
        @RenderBody()
    </div>

    <footer class="footer-10">
        <div class="container">
            <div class="row mb-1 no-gutters">
                <div class="col-md-4 mb-md-0 mb-4 d-flex">
                    <div class="col-md-4 w-100 py-4">
                        <div class="ico w-100  text-center">
                            <img class="icone" src="/Image/icone-tel.png" />
                        </div>
                        <div class="text">
                            <p>info@coprobox.com</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-md-0 mb-4 d-flex">
                    <div class="col-md-4 w-100 py-4">
                        <div class="ico w-100 text-center">
                            <img class="icone" src="/Image/icone-mail.png" />
                        </div>
                        <div class="text">
                            <p>info@coprobox.com</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-md-0 mb-4 d-flex">
                    <div class="col-md-4 w-100 py-4">
                        <div class="ico w-100 text-center">
                            <img class="icone" src="/Image/icone-adresse.png" />
                        </div>
                        <div class="text">
                            <p>2 avenue du Général LECLERC <br /> 92240 MALAKOFF</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="separation">
            </div>
            <div class="row ">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-4">
                            <h3 class="partie">A propos</h3>
                            <ul>
                                <li>Notre histoire</li>
                                <li>Notre équipe</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h3 class="partie">L'entreprise</h3>
                            <ul>
                                <li>Contacts</li>
                                <li></li>
                                <li></li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h3 class="Ressources"></h3>
                            <ul>
                                <li>Privacy Policy</li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
            <div class="base">
                <p>Copyright © Team Coprobox</p>
            </div>
        </div>
</footer>
</body>
</html>